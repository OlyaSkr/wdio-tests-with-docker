{
  "name": "webdriverio-docker-actions",
  "type": "module",
  "devDependencies": {
    "@badisi/wdio-harness": "^4.1.4",
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/allure-reporter": "^9.12.6",
    "@wdio/cli": "^9.12.7",
    "@wdio/dot-reporter": "^9.12.6",
    "@wdio/json-reporter": "^9.12.6",
    "@wdio/local-runner": "^9.12.7",
    "@wdio/mocha-framework": "^9.12.6",
    "@wdio/spec-reporter": "^9.12.6",
    "@wdio/visual-service": "^7.0.0",
    "allure-commandline": "^2.34.1",
    "chromedriver": "^135.0.4",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "rimraf": "^6.0.1",
    "wdio-wait-for": "^3.1.0"
  },
  "scripts": {
    "test:single-file": "npx wdio run config/wdio.local.conf.js --spec ./test/specs/footer.spec.js",
    "test:all": "npx wdio run config/wdio.local.conf.js",
    "test:chrome": "npx wdio run config/wdio.chrome.conf.js",
    "test:chrome:headless": "npx wdio run config/wdio.chrome.headless.conf.js",
    "test:firefox": "npx wdio run config/wdio.firefox.conf.js",
    "test:firefox:headless": "npx wdio run config/wdio.firefox.headless.conf.js",
    "test:edge": "npx wdio run config/wdio.edge.conf.js",
    "test:edge:headless": "npx wdio run config/wdio.edge.headless.conf.js",
    "clean:allure": "rimraf allure-results allure-report",
    "allure:report:generate": "allure generate ./allure-results --clean",
    "allure:report:open": "npx allure open allure-report",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test:docker": "docker-compose run --rm wdio-tests npx wdio run config/wdio.docker.conf.js",
    "test:docker:build": "docker-compose build wdio-tests && docker-compose run wdio-tests npx wdio run config/wdio.docker.conf.js"
  }
}
